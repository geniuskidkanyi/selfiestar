
<%= form_for(@subscribe, html: {class: "card login-card"} ) do |f| %>
<h2>Subscribe now</h2>
<%= render "shared/errors", object: @subscribe %>
<div>
    <%= f.label :name, class: "label"  %>
    <%= f.text_field :name, autofocus: true, class: "input" %></div>

<div>
    <%= f.label :email, class: "label"  %>
    <%= f.email_field :email, autofocus: true, class: "input" %></div>
<div>

    <%= f.submit "Subscribe", class: "btn" %></div>

<% end %>
