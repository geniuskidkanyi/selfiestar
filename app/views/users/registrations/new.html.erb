
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "card login-card"} ) do |f| %>
<h2>Sign up</h2>

<%= devise_error_messages! %>


<div>
    <%= f.label :username, class: "label"  %>
    <%= f.text_field :username, autofocus: true, class: "input" %></div>

<div>
    <%= f.label :phone_number, class: "label"  %>
    <%= f.number_field :phone_number, autofocus: true, class: "input" %></div>
<div>
    <lable class="label">password   <em>(<%= @minimum_password_length %>
          characters minimum)</em></lable>
    <% if @minimum_password_length %>

    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off", class: "input" %></div>

<div>
    <%= f.label :password_confirmation, class: "label"  %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %></div>

<div>
    <%= f.submit "Sign up", class: "btn" %></div>
<%= render "users/shared/links" %>
<% end %>
