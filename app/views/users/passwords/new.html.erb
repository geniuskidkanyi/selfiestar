
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card login-card" }) do |f| %>
  <%= devise_error_messages! %>
  <h2>Forgot your password?</h2>

  <div class="field">
    <%= f.label :username, class: "label" %><br />
    <%= f.text_field :login, autofocus: true, class: "input"  %>
  </div>

  <div class="actions">
    <%= f.submit "reset password", class: "btn" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
