

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "card login-card"} ) do |f| %>
  <h2>Log in</h2>
    <%= f.label :login, class: "label" %>
    <%= f.text_field :login, autofocus: true, class: "input" %>



    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "off", class: "input" %>


  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn" %>
  </div>
  <%= render "users/shared/links" %>
<% end %>
